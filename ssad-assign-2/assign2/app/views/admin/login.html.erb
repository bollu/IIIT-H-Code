<%= form_for :user, url: {action: "login"}, method: :post, html: {class:"centered-form" }   do |f| %>
<h1> Admin Login </h1>

<div class="form-group">  
    <label>Username</label>
     <%= f.text_field :username, :class => "form-control" %>

    <label class="help-inline" for="inputError">
        <% if flash.key?(:error) and flash[:error].key?("username") %>
        username <%= flash[:error]["username"][0] %>
        <% end %>
    </label>
</div>

<div class="form-group">  
    <label>Name</label>
     <%= f.password_field :password, :class => "form-control" %>

    <label class="help-inline" for="inputError">
        <% if flash.key?(:error) and flash[:error].key?("password") %>
        password <%= flash[:error]["password"][0] %>
        <% end %>
    </label>
</div>

<%= f.submit "Login", :class => "btn, btn-primary" %>
<% end %>